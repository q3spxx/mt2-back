{
    "compilerOptions": {
        "target": "es5",
        "lib": ["esnext"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@models": ["models"],
            "@repositories": ["repositories"],
            "@services": ["services"],
            "@controllers": ["controllers"],
            "@mappers": ["mappers"],
            "@config": ["config"],
            "@helpers": ["helpers"]
        },
        "rootDir": "./"
    }
}
